<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_menu_content"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center_vertical">
    <View
        android:id="@+id/iv_menu_selected"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="#eacb70"/>
    <ImageView
        android:id="@+id/iv_menu_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/icon_main_left_menu"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginLeft="15dp"
        android:text="菜单"/>
    <com.tysci.ballq.views.widgets.roundview.RoundTextView
        android:id="@+id/tv_menu_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"/>
</LinearLayout>